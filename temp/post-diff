#!/usr/bin/env bash
# GLX post-diff (wrapper/narzÄ™dzie) â€” uruchamia Pythona 3.9+ z .githooks/post-diff.py
set -euo pipefail

HOOK_DIR="$(cd "$(dirname "$0")" && pwd)"

# ğŸ§© Awaryjna Å›cieÅ¼ka do Pythona (Twoja instalacja)
# uÅ¼ywaj notacji bashowej /c/â€¦ zamiast C:/â€¦
PY_FALLBACK="/c/Python39/python.exe"

# ğŸ§  GÅ‚Ã³wny interpreter (zmienna Å›rodowiskowa lub python3)
PY="${PYTHON:-python3}"

# ğŸ” SprawdÅº dostÄ™pnoÅ›Ä‡ interpretera
if ! command -v "$PY" >/dev/null 2>&1; then
  if [ -x "$PY_FALLBACK" ]; then
    echo "[post-diff] python3 not found, using fallback: $PY_FALLBACK" >&2
    PY="$PY_FALLBACK"
  elif command -v python >/dev/null 2>&1; then
    echo "[post-diff] python3 not found, using 'python'." >&2
    PY="python"
  else
    echo "[post-diff] Python not found. Set \$PYTHON or install Python 3.9+." >&2
    exit 127
  fi
fi

# ğŸ§® SprawdÅº wersjÄ™ interpretera
"$PY" - <<'PYVER'
import sys
maj, min = sys.version_info[:2]
if (maj, min) < (3, 9):
    print(f"[post-diff] Python >= 3.9 required (found {maj}.{min}).", file=sys.stderr)
    sys.exit(2)
PYVER

# ğŸš€ Uruchom wÅ‚aÅ›ciwy skrypt hooka
exec "$PY" "$HOOK_DIR/post-diff.py" "$@"
